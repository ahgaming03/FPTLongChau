@{
    ViewData["Title"] = "Home page";
}
<!-- Products -->

@for(var j = 0; j < 8; j++)
{
	<section>
		<div class="my-5 container">
			<header class="mb-4">
				<h3>New products</h3>
			</header>

			<div class="row">
				@for(var i = 0; i < 8; i++)
				{
					<div class="col-lg-3 col-md-6 col-sm-6 d-flex">
						<div class="card w-100 my-2 shadow-2-strong">
							<img src="https://placewaifu.com/image/@( i * 100 + 100 + j)"
								 class="card-img-top"
								 style="aspect-ratio: 1 / 1" />
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">
									GoPro HERO6 4K Action Camera - Black
								</h5>
								<p class="card-text">$790.50</p>
								<div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
									<a href="#!"
									   class="btn btn-primary shadow-0 me-1">Add to cart</a>
									<a href="#!"
									   class="btn btn-light px-2 pt-2 icon-hover border">
										<i class="fas fa-heart fa-lg text-secondary px-1"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</section>
}
