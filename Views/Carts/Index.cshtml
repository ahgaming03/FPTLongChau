@{
	ViewData["Title"] = "Shopping Cart";
}
<!-- cart + summary -->
<section class="bg-light my-5">
	<div class="container">
		<div class="row">
			<!-- cart -->
			<div class="col-lg-9">
				<div class="card shadow-0 border">
					<div class="m-4">
						<h4 class="card-title mb-4">
							Your shopping cart
						</h4>
						@for(var i = 0; i < 3; i++)
						{
							<div class="row gy-3 mb-4">
								<div class="col-lg-5">
									<div class="me-lg-5">
										<div class="d-flex">
											<img src="https://placewaifu.com/image/@(i * 100 + 100)"
												 class="me-3 rounded border"
												 style="
                                                        width: 96px;
                                                        height: 96px;
																" />
											<div class="">
												<a href="#" class="nav-link">
													Winter jacket for men
													and lady
												</a>
												<p class="text-muted">
													Yellow, Jeans
												</p>
											</div>
										</div>
									</div>
								</div>
								<div class="col-lg-2 col-sm-6 col-6 d-flex flex-lg-column flex-xl-row flex-row text-nowrap">
									<div class="">
										<input type="number" class="form-input me-4" value="1" min="1" max="20" style="width: 50px" />
									</div>
									<div class="">
										<text class="h6">$500.00</text>
										<br />
										<small class="text-muted text-nowrap">
											$500.00 / per item
										</small>
									</div>
								</div>
								<div class="col-lg col-sm-6 d-flex justify-content-sm-center justify-content-md-start justify-content-lg-center justify-content-xl-end mb-2">
									<div class="float-md-end">
										<a href="#!"
										   class="btn btn-light px-2 icon-hover-primary border">
											<i class="fas fa-heart fa-lg px-1 text-secondary"></i>
										</a>
										<a href="#"
										   class="btn btn-light text-danger icon-hover-danger border">
											Remove
										</a>
									</div>
								</div>
							</div>
						}
					</div>

					<div class="border-top pt-4 mx-4 mb-4">
						<p>
							<i class="fas fa-truck text-muted fa-lg"></i>
							Free Delivery within 1-2 weeks
						</p>
						<p class="text-muted">
							Lorem ipsum dolor sit amet, consectetur
							adipisicing elit, sed do eiusmod tempor
							incididunt ut labore et dolore magna aliqua.
							Ut enim ad minim veniam, quis nostrud
							exercitation ullamco laboris nisi ut aliquip
						</p>
					</div>
				</div>
			</div>
			<!-- cart -->
			<!-- summary -->
			<div class="col-lg-3">
				<div class="card shadow-0 border">
					<div class="card-body">
						<div class="d-flex justify-content-between">
							<p class="mb-2">Total price:</p>
							<p class="mb-2 fw-bold">1,500.00</p>
						</div>
						<hr />

						<div class="mt-3">
							<a class="btn btn-success w-100 shadow-0 mb-2"
							   asp-controller="Purchases"
							   asp-action="Index">
								Make Purchase
							</a>
							<a class="btn btn-light w-100 mt-2 border"
							   asp-controller="Home"
							   asp-action="Index">
								Back to shop
							</a>
						</div>
					</div>
				</div>
			</div>
			<!-- summary -->
		</div>
	</div>
</section>
<!-- cart + summary -->
<section>
	<div class="my-5 container">
		<header class="mb-4">
			<h3>Recommended items</h3>
		</header>

		<div class="row">
			@for(var i = 0; i < 4; i++)
			{
				<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="card px-4 shadow-0 mb-4 mb-lg-0 border">
						<div class="mask px-2" style="height: 50px">
							<div class="d-flex justify-content-between">
								<h6>
									<span class="badge bg-danger pt-1 mt-3 ms-2">New</span>
								</h6>
								<a href="#">
									<i class="fas fa-heart text-primary fa-lg pt-3 m-2 float-end"></i>
								</a>
							</div>
						</div>
						<a href="#" class="">
							<img src="https://placewaifu.com/image/@(i * 100 + 100)"
								 class="card-img-top rounded-2" />
						</a>
						<div class="card-body d-flex flex-column pt-3 border-top">
							<a href="#" class="nav-link">Gaming Headset with Mic</a>
							<div class="price-wrap mb-2">
								<strong class="">$18.95</strong>
								<del class="">$24.99</del>
							</div>
							<div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
								<a href="#"
								   class="btn btn-outline-primary w-100">Add to cart</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>
<!-- Recommended -->
